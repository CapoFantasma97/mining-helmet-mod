{
  "schemaVersion": 1,
  "id": "mining_helmet",
  "version": "${version}",

  "name": "Mining Helmet",
  "description": "Add lights source that you could wear.",
  "authors": [
    "jptrzy"
  ],
  "contact": {
    "homepage": "https://github.com/jptrzy/mining-helmet-mod",
    "sources": "https://github.com/jptrzy/mining-helmet-mod",
